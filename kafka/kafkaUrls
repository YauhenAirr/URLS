/bin/kafka-topics --alter --topic demo-topic --partitions 3 --bootstrap-server kafka:9092 change topic
/bin/kafka-topics --create --topic demo-topic --bootstrap-server kafka:9092 create topic
/bin/kafka-topics --describe --topic demo-topic --bootstrap-server kafka:9092 describe topic

/bin/kafka-console-producer --topic demo-topic --bootstrap-server kafka:9092  new producer

/bin/kafka-console-consumer --topic demo-topic --from-beginning --bootstrap-server kafka:9092  new consumer read from begining
docker exec -it kafka /bin/kafka-console-consumer --topic demo-topic --group demo-group --bootstrap-server kafka:9092 new consumer read real time
